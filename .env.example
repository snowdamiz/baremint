# Database (Neon Postgres)
DATABASE_URL=

# Better Auth
BETTER_AUTH_SECRET=          # Random secret for session encryption (generate with: openssl rand -base64 32)
BETTER_AUTH_URL=             # Full URL of the app (e.g. http://localhost:3000)

# OAuth providers (optional -- needed for Plan 03)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# Wallet encryption (optional -- needed for Plan 02)
WALLET_ENCRYPTION_KEY=       # 32-byte hex key for AES-256-GCM (generate with: openssl rand -hex 32)

# Solana RPC (optional -- needed for Plan 02)
HELIUS_RPC_URL=              # Helius RPC endpoint (e.g. https://mainnet.helius-rpc.com/?api-key=YOUR_KEY)

# Public
NEXT_PUBLIC_APP_URL=         # Public-facing URL (e.g. http://localhost:3000)
